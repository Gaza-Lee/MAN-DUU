<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MANDUU"
             xmlns:animations="clr-namespace:MANDUU.Animations"
             xmlns:droid="clr-namespace:CommunityToolkit.Maui.PlatformConfiguration.AndroidSpecific;assembly=CommunityToolkit.Maui"
             droid:NavigationBar.Color="#FF7B1C"
             x:Class="MANDUU.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="GraphicsView" x:Key="topwave">
                <Setter Property="Drawable" Value="{x:Static animations:TopOrangePanel.Instance}"/>
                <Setter Property="VerticalOptions" Value="Start"/>
            </Style>
            <Style TargetType="Border" x:Key="catTitleBorder">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF9549" Offset="0.0"/>
                            <GradientStop Color="#FF7B1C" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="StrokeShape" Value="RoundRectangle 5" />
                <Setter Property="Margin" Value="5,0,0,0" />
                <Setter Property="Padding" Value="15,5" />
                <Setter Property="HorizontalOptions" Value="Start" />
            </Style>
            <Style TargetType="Label" x:Key="CatTitleText">
                <Setter Property="FontFamily" Value="Finlandica"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="TextColor" Value="#fff"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
