<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MANDUU.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MANDUU.Views"
    xmlns:mainPages="clr-namespace:MANDUU.Views.MainPages"
    xmlns:Icon ="clr-namespace:MANDUU.Helpers"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="MANDUU">
    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor ="{StaticResource Primary}"/>
    </Shell.Behaviors>

    <!--Tabbed Pages-->
    <TabBar>
        <ShellContent 
            Title="Home"
            ContentTemplate="{DataTemplate mainPages:HomePage}"
            Route="home">
            <ShellContent.Icon>
                <FontImageSource FontFamily="MaterialIcon"
                                 Glyph="{x:Static Icon:Icons.homeIcon}"/>
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent 
            Title="Purchases"
            ContentTemplate="{DataTemplate mainPages:PurchasesPage}"
            Route="PurchasesPage">
            <ShellContent.Icon>
                <FontImageSource FontFamily="MaterialIcon"
                                 Glyph="{x:Static Icon:Icons.PurchasesIcon}"/>
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent 
                Title="Electronic Printing"
                ContentTemplate="{DataTemplate mainPages:EPrintingPage}"
                Route="EPrinting">
            <ShellContent.Icon>
                <FontImageSource FontFamily="MaterialIcon"
                         Glyph="{x:Static Icon:Icons.ePrintIcon}"/>
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent 
                Title="Shops"
                ContentTemplate="{DataTemplate mainPages:ShopsPage}"
                Route="ShopsPage">
            <ShellContent.Icon>
                <FontImageSource FontFamily="MaterialIcon"
                         Glyph="{x:Static Icon:Icons.shopIcon}"/>
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>
</Shell>
