<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="clr-namespace:MANDUU.Helpers"
             xmlns:models="clr-namespace:MANDUU.Models"
             x:Class="MANDUU.Views.MainPages.HomePage">
    <Shell.TitleView>
        <Grid ColumnDefinitions="*, Auto, *"
              Padding="0, 0, 5, 0"
              Margin="0"
              VerticalOptions="Center">
            <Label Grid.Column="0" 
               Text="{x:Static icons:Icons.profileIcon}"
               HorizontalOptions="Start"
               FontFamily="MaterialIcon"
               VerticalOptions="Center"
               FontSize="30">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Profile}"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="Home"
               Grid.Column="1"
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

            <Label Grid.Column="2" 
               Text="{x:Static icons:Icons.searchIcon}"
               HorizontalOptions="End"
               FontFamily="MaterialIcon"
               VerticalOptions="Center"
               FontSize="30">
            </Label>
        </Grid>
    </Shell.TitleView>

    <VerticalStackLayout Padding="10, 0">
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Salute, &#10;"
                          TextColor="DarkGray"
                          FontAttributes="Bold"
                          FontSize="Body"/>
                    <Span Text="GrandMa"
                          FontFamily="Finlandica"
                          FontSize="25"
                          TextColor="#ff7b1c"
                          FontAttributes="Bold"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <CollectionView ItemsSource="{Binding Offers}"
                        HeightRequest="80"
                        Margin="0,10,0,0">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" 
                                   ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Offer">
                    <Border StrokeThickness="0"
                            StrokeShape="RoundRectangle 10"
                            WidthRequest="250">
                        <Grid>
                            <BoxView Color="{Binding BgColor}"/>

                            <Grid RowDefinitions="auto, *, auto"
                                  Margin="5">
                                <Label Text="{Binding Title}"
                                       Grid.Row="0"/>
                                <Label Text="{Binding Description}" 
                                       Grid.Row="1"
                                       Margin="5,0,0,0"
                                       FontFamily="Finlandica"/>
                                <Label Text="{Binding offerCode}" 
                                       Grid.Row="2"/>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <!--Categories-->
        <VerticalStackLayout Margin="0,10,0,5">
            <Border StrokeThickness="0"
                    StrokeShape="RoundRectangle 5"
                    Style="{x:StaticResource catTitleBorder}">
                <Label Text="Categories"
                       Style="{x:StaticResource CatTitleText}"/>
            </Border>
            
            <CollectionView ItemsSource="{Binding MainCategories}"
                            Margin="0,10"
                            HorizontalOptions="Center"
                            SelectionMode="Single"
                            x:Name="CategoriesCollectionView"
                            SelectionChangedCommand="{Binding SelectedCategoryCommand}"
                            SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference CategoriesCollectionView}}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"
                           ItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:MainCategory">
                        <Border StrokeShape="RoundRectangle 10"
                                StrokeThickness="0"
                                WidthRequest="80"
                                BackgroundColor="#FFAF80">
                            <Grid>

                                <VerticalStackLayout VerticalOptions="Center"
                                                     Margin="5"
                                                     Spacing="2">
                                    <Image Source="{Binding Icon}"
                                           Aspect="AspectFill"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           HeightRequest="40"/>
                                    <Border Grid.Row="1"
                                            VerticalOptions="End"
                                            StrokeShape="RoundRectangle 10"
                                            Background="White"
                                            StrokeThickness="0.1"
                                            Margin="0,0,0,5">
                                        <Border.Shadow>
                                            <Shadow Brush="#000"
                                                    Offset="5,5"
                                                    Opacity="0.3"/>
                                        </Border.Shadow>
                                        <Label Text="{Binding Name}"
                                               Margin="6,3"
                                               FontSize="10"
                                               HorizontalTextAlignment="Center"/>
                                    </Border>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
        
        <!--Best Sales-->
        <VerticalStackLayout Margin="0">
            <Border StrokeThickness="0"
            StrokeShape="RoundRectangle 5"
            Style="{x:StaticResource catTitleBorder}">
                <Label Text="Best Sales"
               Style="{x:StaticResource CatTitleText}"/>
            </Border>

            <CollectionView  x:Name="BestSalesCollectionView"
                             Margin="0,10"
                            ItemsSource="{Binding BestSellingProducts}"
                            SelectionMode="Single"
                            SelectionChangedCommand="{Binding SelectedProductCommand, Mode=TwoWay}"
                            SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference BestSalesCollectionView}}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <Border StrokeShape="RoundRectangle 5"
                                StrokeThickness="0.5"
                                Background="#fff"
                                WidthRequest="120"
                                HeightRequest="150"
                                Margin="5">
                            <Grid RowDefinitions="*,auto">
                                <Image Source="{Binding ImageUrl}" Aspect="AspectFill"/>
                                <VerticalStackLayout Grid.Row="1" Padding="5">
                                    <Label Text="{Binding Name}" FontAttributes="Bold" LineBreakMode="TailTruncation" MaxLines="1"/>
                                    <HorizontalStackLayout>
                                        <Label Text="{x:Static icons:Icons.locationIcon}" FontFamily="MaterialIcon" Margin="0,2,0,0"/>
                                        <Label Text="{Binding ShopLocation}"
                                               FontFamily="Finlandica"/>
                                    </HorizontalStackLayout>
                                    <Label Text="{Binding FormattedPrice}" TextColor="{StaticResource Primary}" FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>            
        </VerticalStackLayout>
        
        <!--Recommended shops-->
        <VerticalStackLayout Margin="0,0">
            <Border StrokeThickness="0"
            StrokeShape="RoundRectangle 5"
            Style="{x:StaticResource catTitleBorder}">
                <Label Text="Recommended shops"
               Style="{x:StaticResource CatTitleText}"/>
            </Border>
            <CollectionView  x:Name="RecommendedShopsCollectionView"
                 Margin="0,10"
                ItemsSource="{Binding RecommendedShops}"
                SelectionMode="Single"
                SelectionChangedCommand="{Binding SelectedShopCommand, Mode=TwoWay}"
                SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference RecommendedShopsCollectionView}}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Shop">
                        <Border StrokeShape="RoundRectangle 5"
                                StrokeThickness="0.5"
                                Background="#fff"
                                WidthRequest="150"
                                HeightRequest="150"
                                Margin="5">
                            <Grid RowDefinitions="*,auto">
                                <Image Source="{Binding ShopProfileImage}" Aspect="AspectFill"/>
                                <VerticalStackLayout Grid.Row="1" Padding="5">
                                    <Label Text="{Binding Name}" FontAttributes="Bold" LineBreakMode="TailTruncation" MaxLines="1"/>
                                    <HorizontalStackLayout>
                                        <Label Text="{x:Static icons:Icons.locationIcon}" FontFamily="MaterialIcon" Margin="0,2,0,0"/>
                                        <Label Text="{Binding ShortLocation}"
                                   FontFamily="Finlandica"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>