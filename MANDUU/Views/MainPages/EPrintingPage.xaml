<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="clr-namespace:MANDUU.Helpers"
             x:Class="MANDUU.Views.MainPages.EPrintingPage">
    <Shell.TitleView>
        <Grid ColumnDefinitions="*, Auto, *"
              Padding="0,0,5,0"
              VerticalOptions="Center"
              HorizontalOptions="FillAndExpand">

            <Label Grid.Column="0" 
                   Text="{x:Static icons:Icons.profileIcon}"
                   HorizontalOptions="Start"
                   FontFamily="MaterialIcon"
                   VerticalOptions="Center"
                   FontSize="30">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Profile}"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="Electronic Printing"
                   Grid.Column="1"
                   FontSize="20"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <Label Grid.Column="2" 
                   Text="{x:Static icons:Icons.searchIcon}"
                   HorizontalOptions="End"
                   FontFamily="MaterialIcon"
                   VerticalOptions="Center"
                   FontSize="30">
            </Label>
        </Grid>
    </Shell.TitleView>
    <Grid RowDefinitions="Auto,Auto">

        <Border StrokeThickness="0"
                BackgroundColor="#66D9D9D9"
                Margin="20"
                StrokeShape="RoundRectangle 10"
                Padding="10"
                Grid.Row="0">

            <Grid RowDefinitions="Auto,Auto">

                <Label Text="{x:Static icons:Icons.documentIcon}"
                       FontSize="180"
                       Style="{x:StaticResource MaterialIcon}"
                       HorizontalOptions="Center"/>

                <Border HorizontalOptions="Center"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="#FF9E59"
                        Grid.Row="1"
                        Margin="0,10,0,10">
                    <Border.Shadow>
                        <Shadow Brush="#000"
                                Offset="5,5"
                                Opacity="0.3"/>
                    </Border.Shadow>
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Spacing="5"
                                           Padding="8,5,12,5">
                        <Label Text="{x:Static icons:Icons.pickerIcon}"
                               FontSize="25"
                               FontFamily="MaterialIcon"
                               TextColor="#fff"/>
                        <Label Text="CHOOSE DOCUMENT"
                               FontSize="20"
                               VerticalOptions="Center"
                               TextColor="#fff"/>

                    </HorizontalStackLayout>
                </Border>
            </Grid>
        </Border>
        <Border Grid.Row="1"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0"
                Background="#FF9E59"
                HorizontalOptions="Center"
                Padding="8,5,12,5">
            <Border.Shadow>
                <Shadow Brush="#000"
                        Offset="5,5"
                        Opacity="0.3"/>
            </Border.Shadow>
            <HorizontalStackLayout HorizontalOptions="Center"
                   VerticalOptions="Center"
                       Spacing="5"
                       Padding="8,5,12,5">
                <Label Text="{x:Static icons:Icons.UploadIcon}"
                       FontSize="25"
                       FontFamily="MaterialIcon"
                       TextColor="#fff"/>
                <Label Text="UPLOAD"
                       FontSize="20"
                       VerticalOptions="Center"
                       TextColor="#fff"/>
            </HorizontalStackLayout>
        </Border>
    </Grid>
</ContentPage>