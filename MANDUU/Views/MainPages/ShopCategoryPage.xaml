<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MANDUU.ViewModels"
             xmlns:icons="clr-namespace:MANDUU.Helpers"
             xmlns:models="clr-namespace:MANDUU.Models"
             x:Class="MANDUU.Views.MainPages.ShopCategoryPage"
             x:Name="ShopCategoryPageRoot"
             Title="Shop Categories">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*, Auto, *"
              Padding="0, 0, 5, 0"
              Margin="0"
              VerticalOptions="Center">
            <Label Grid.Column="0" 
                   Text="{x:Static icons:Icons.profileIcon}"
                   HorizontalOptions="Start"
                   FontFamily="MaterialIcon"
                   VerticalOptions="Center"
                   FontSize="30">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ProfileCommand}"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="Shop Categories"
                   Grid.Column="1"
                   FontSize="20"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <Label Grid.Column="2" 
                   Text="{x:Static icons:Icons.searchIcon}"
                   HorizontalOptions="End"
                   FontFamily="MaterialIcon"
                   VerticalOptions="Center"
                   FontSize="30">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SearchCommand}"/>
                </Label.GestureRecognizers>
            </Label>
        </Grid>
    </Shell.TitleView>

    <Grid RowDefinitions="auto, *" Margin="5">
        <!-- My Shop button-->
        <Border Grid.Row="0"
                HorizontalOptions="End" 
                StrokeShape="RoundRectangle 5"
                BackgroundColor="{StaticResource Primary}"
                Padding="10"
                Margin="5,0"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Gray"
                        Offset="5,5"
                        Opacity="0.5"/>
            </Border.Shadow>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoToMyShopCommand}"/>
            </Border.GestureRecognizers>
            <HorizontalStackLayout Spacing="5">
                <Label Text="{x:Static icons:Icons.shopIcon}"
                       FontFamily="MaterialIcon"
                       TextColor="#fff"
                       FontSize="20"/>
                <Label Text="My Shop" 
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       TextColor="#fff"/>
            </HorizontalStackLayout>
        </Border>

        <ScrollView Grid.Row="1">
            <CollectionView ItemsSource="{Binding ShopCategories}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ShopCategory">
                        <Grid RowDefinitions="Auto, *" Margin="0,0,0,20">
                            <Border StrokeThickness="0"
                                    StrokeShape="RoundRectangle 5"
                                    Style="{x:StaticResource catTitleBorder}">
                                <Label Text="{Binding Name}"
                                       Style="{x:StaticResource CatTitleText}"/>
                            </Border>

                            <CollectionView Grid.Row="1"
                                            Margin="0,10"
                                            ItemsSource="{Binding Shops}"
                                            SelectionMode="Single"
                                            SelectionChangedCommand="{Binding Source={x:Reference ShopCategoryPageRoot}, Path=BindingContext.SelectedShopCommand}"
                                            SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:Shop">
                                        <Border StrokeShape="RoundRectangle 5"
                                                StrokeThickness="0.5"
                                                Background="#fff"
                                                WidthRequest="150"
                                                HeightRequest="150"
                                                Margin="5">
                                            <Grid RowDefinitions="*,auto">
                                                <Image Source="{Binding ShopProfileImage}" Aspect="AspectFill"/>
                                                <VerticalStackLayout Grid.Row="1" Padding="5">
                                                    <Label Text="{Binding Name}" FontAttributes="Bold" LineBreakMode="TailTruncation" MaxLines="1"/>
                                                    <HorizontalStackLayout>
                                                        <Label Text="{x:Static icons:Icons.locationIcon}" FontFamily="MaterialIcon" Margin="0,2,0,0"/>
                                                        <Label Text="{Binding ShortLocation}"
                                                               FontFamily="Finlandica"/>
                                                    </HorizontalStackLayout>
                                                </VerticalStackLayout>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>