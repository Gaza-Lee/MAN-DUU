<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="clr-namespace:MANDUU.Helpers"
             x:Class="MANDUU.Views.MainPages.SubPages.UserProfilePage"
             Shell.TabBarIsVisible="False">
    <Shell.TitleView>
            <Grid ColumnDefinitions="*,auto" Padding="10,0">
                <!-- Page Title -->
                <Label Text="Profile"
                   FontSize="20"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource White}}"/>

                <!-- Right-aligned logo -->
            <Border HorizontalOptions="End"
                    Grid.Column="1"
                    BackgroundColor="{StaticResource Primary}"
                    VerticalOptions="Center"
                    Padding="10,5"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="0">
                <Border.Shadow>
                    <Shadow Offset="5,5"
                            Brush="Gray"
                            Opacity="0.5"/>
                </Border.Shadow>
                <Label Text="Manduu"
                       TextColor="#fff"/>
            </Border>
            </Grid>
        </Shell.TitleView>
    
    <Grid RowDefinitions="auto,*,auto" Margin="5" RowSpacing="20">
        <Border Grid.Row="0"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray600}}"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0"
                Padding="5,20,5,5">
            <Border.Shadow>
                <Shadow Brush="Gray"
                        Offset="5,5"
                        Opacity="0.5"/>
            </Border.Shadow>
            <VerticalStackLayout HorizontalOptions="Center">
                <Border WidthRequest="120"
                        HeightRequest="120"
                        StrokeShape="RoundRectangle 100"
                        StrokeThickness="0">
                    <Image Source="{Binding ProfileImage}"
                           Aspect="AspectFill"/>
                </Border>
                <Label Text="{Binding FullName}"
                       FontSize="24"
                       HorizontalOptions="Center"/>
                
                <Border WidthRequest="360"
                        StrokeShape="RoundRectangle 5"
                        BackgroundColor="Gray"
                        Padding="10,5"
                        Margin="0,10">
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label Text="{x:Static icons:Icons.pickerIcon}"
                               FontFamily="MaterialIcon"
                               FontSize="20"
                               TextColor="#fff"/>
                        <Label Text="Edit Pofile"
                               FontSize="16"
                               VerticalTextAlignment="Center"
                               TextColor="#fff"/>
                    </HorizontalStackLayout>
                </Border>
            </VerticalStackLayout>
        </Border>

        <Grid RowDefinitions="auto,auto,auto,auto" VerticalOptions="End"
              Grid.Row="1" RowSpacing="10">

            <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray600}}"
                    StrokeShape="RoundRectangle 10"
                    Padding="10,5"
                    StrokeThickness="0"
                    Grid.Row="0">
                <Border.Shadow>
                    <Shadow Brush="Gray"
                            Offset="5,5"
                            Opacity="0.3"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToGetVerifiedCommand, Mode=TwoWay}"/>
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="auto, *, auto" ColumnSpacing="5">
                    <Label Grid.Column="0"
                           Text="{x:Static icons:Icons.verificationBadgeIcon}"
                           FontFamily="MaterialIcon"
                           TextColor="Green"
                           FontSize="30"
                           VerticalTextAlignment="Center"/>
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                        <Label Text="GET VERIFIED"
                               FontSize="18"/>
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="{x:Static icons:Icons.infoIcon}"
                                   FontFamily="MaterialIcon"
                                   VerticalOptions="Center"
                                   VerticalTextAlignment="Center"/>
                            <Label Text="Recommended for vendors"
                                   VerticalTextAlignment="Center"
                                   FontFamily="Finlandica"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    <Label Text="{x:Static icons:Icons.getStartedIcon}"
                           Grid.Column="2"
                           FontFamily="MaterialIcon"
                           FontSize="30"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           TextColor="Gray"/>
                </Grid>
            </Border>

            <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray600}}"
                    StrokeShape="RoundRectangle 10"
                    Padding="10,5"
                    StrokeThickness="0"
                    Grid.Row="1">
                <Border.Shadow>
                    <Shadow Brush="Gray"
                            Offset="5,5"
                            Opacity="0.3"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToFavoritesCommand, Mode=TwoWay}"/>
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="auto, *, auto" ColumnSpacing="5">
                    <Label Grid.Column="0"
                           Text="{x:Static icons:Icons.favoriteIcon}"
                           FontFamily="MaterialIcon"
                           TextColor="Red"
                           FontSize="30"/>
                    <Label Text="FAVORITES"
                           Grid.Column="1"
                           FontSize="20"/>
                    <Label Text="{x:Static icons:Icons.getStartedIcon}"
                           Grid.Column="2"
                           FontFamily="MaterialIcon"
                           FontSize="30"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           TextColor="Gray"/>
                </Grid>
            </Border>
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray600}}"
                    StrokeShape="RoundRectangle 10"
                    Padding="10,5"
                    StrokeThickness="0"
                    Grid.Row="3">
                <Border.Shadow>
                    <Shadow Brush="Gray"
                            Offset="5,5"
                            Opacity="0.3"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToFAQCommand, Mode=TwoWay}"/>
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="auto, *, auto" ColumnSpacing="5">
                    <Label Grid.Column="0"
                           Text="{x:Static icons:Icons.FAQIcon}"
                           FontFamily="MaterialIcon"
                           FontSize="30"/>
                    <Label Text="FAQ"
                           Grid.Column="1"
                           FontSize="20"/>
                    <Label Text="{x:Static icons:Icons.getStartedIcon}"
                           Grid.Column="2"
                           FontFamily="MaterialIcon"
                           FontSize="30"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           TextColor="Gray"/>
                </Grid>
            </Border>
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray600}}"
                    StrokeShape="RoundRectangle 10"
                    Padding="10,5"
                    StrokeThickness="0"
                    Grid.Row="2">
                <Border.Shadow>
                    <Shadow Brush="Gray"
                            Offset="5,5"
                            Opacity="0.3"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToSettingsCommand, Mode=TwoWay}"/>
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="auto, *, auto" ColumnSpacing="5">
                    <Label Grid.Column="0"
                           Text="{x:Static icons:Icons.settingsIcon}"
                           FontFamily="MaterialIcon"
                           FontSize="30"/>
                    <Label Text="SETTINGS"
                           Grid.Column="1"
                           FontSize="20"/>
                    <Label Text="{x:Static icons:Icons.getStartedIcon}"
                           Grid.Column="2"
                           FontFamily="MaterialIcon"
                           FontSize="30"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           TextColor="Gray"/>
                </Grid>
            </Border>
        </Grid>
        <Grid RowDefinitions="auto, *" Grid.Row="2" RowSpacing="10">
            <Border BackgroundColor="Gray"
                    HeightRequest="1"
                    WidthRequest="180"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"/>

            <Border StrokeThickness="0"
                    StrokeShape="RoundRectangle 5"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    BackgroundColor="Red"
                    Padding="10,5"
                    Grid.Row="1" WidthRequest="250">
                <Border.Shadow>
                    <Shadow Opacity="0.5"
                            Brush="Gray"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LogoutCommand}"/>
                </Border.GestureRecognizers>
                <HorizontalStackLayout Spacing="10">
                    <Label Text="{x:Static icons:Icons.logoutIcon}" 
                           FontFamily="MaterialIcon"
                           FontSize="30"
                           VerticalOptions="Center"
                           VerticalTextAlignment="Center"
                           TextColor="#fff"
                           Rotation="180"
                           FontAttributes="Bold"
                           />
                    <Label Text="LOGOUT"
                           FontSize="16"
                           TextColor="#fff"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           VerticalTextAlignment="Center" />
                </HorizontalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>